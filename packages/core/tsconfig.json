{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "composite": true,                 
    "strict": false,
    "noImplicitAny": false,
    "noEmitOnError": false,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noErrorTruncation": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
