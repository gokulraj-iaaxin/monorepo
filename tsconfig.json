{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@monorepo/core": ["packages/core/src"],
      "@monorepo/react": ["packages/react/src"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "files": [],
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/react"
    }
  ],
  "include": ["packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/node_modules"
  ],
}